<Window x:Class="WpfApp1.Register" Style="{StaticResource BigWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Регистрация" Height="1024" Width="1440" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" HorizontalAlignment="Center" Height="90" VerticalAlignment="Top" Width="1440" CornerRadius="0">
            <TextBlock Margin="0,19,0,16" Style="{StaticResource Header1}">
                <Run Language="ru-ru" Text="Р  Е  Г  И  С  Т  Р  А  Ц  И  Я"/>
            </TextBlock>
        </Border>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
            <!-- Логин -->
            <TextBlock Text="Логин:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="LoginBox" Style="{StaticResource DarkBox}" Height="40" Margin="0,0,0,20"/>

            <!-- Email -->
            <TextBlock Text="Email:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="EmailBox" Style="{StaticResource DarkBox}" Height="40" Margin="0,0,0,20"/>

            <!-- Имя -->
            <TextBlock Text="Имя:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="NameBox" Style="{StaticResource DarkBox}" Height="40" Margin="0,0,0,20"/>

            <!-- Фамилия -->
            <TextBlock Text="Фамилия:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="LastNameBox" Style="{StaticResource DarkBox}" Height="40" Margin="0,0,0,20"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="PhoneBox" Style="{StaticResource DarkBox}" Height="40" Margin="0,0,0,20"/>

            <!-- Пароль -->
            <TextBlock Text="Пароль:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="PasswordBox" Height="40" Margin="0,0,0,20" 
                        FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Подтверждение пароля -->
            <TextBlock Text="Подтвердите пароль:" Style="{StaticResource NormalText}" Margin="0,0,0,10"/>
            <TextBox x:Name="ConfirmPasswordBox" Height="40" Margin="0,0,0,30"
                        FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Кнопки -->
            <Button Content="Зарегистрироваться" Height="50" FontSize="20" 
                    Background="#FF5CAD3E" Foreground="White" Click="RegisterButton_Click"/>

            <Button Content="Назад к входу" Height="40" FontSize="16" Margin="0,20,0,0"
                    Background="#C4E8B7" Foreground="#071B00" Click="BackToLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>