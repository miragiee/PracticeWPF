<Window x:Class="WpfApp1.ShoppingCart" Style="{StaticResource BigWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ShoppingCart" Height="750" Width="1000">
    <Window.Resources>
        <local:StringToImageConverter x:Key="StringToImageConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" Width="1000" Height="90" VerticalAlignment="Top">
            <Border Width="1000" Height="90" CornerRadius="0">
                <TextBlock Text="К  О  Р  З  И  Н  А" FontSize="40" VerticalAlignment="Center" Style="{StaticResource Header1}"/>
            </Border>

            <Button Width="32" Height="32" Margin="-90, 25, 0, 0" Click="CloseShoppingCart">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Group 56.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <ScrollViewer Margin="74,134,74,100">
            <ItemsControl ItemsSource="{Binding Items}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Image Width="150" Height="150" Stretch="Uniform">
                                <Image.Source>
                                    <Binding Path="Product.ImagePath">
                                        <Binding.TargetNullValue>
                                            <!-- Пустое изображение по умолчанию -->
                                            <DrawingImage/>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                            <StackPanel Margin="18,0,0,0" Width="368">
                                <TextBlock Text="{Binding Product.Name}" Style="{StaticResource NormalText}"/>
                                <TextBlock Text="{Binding Amount, StringFormat='К О Л И Ч Е С Т В О   {0}'}" 
                                           Style="{StaticResource NormalText}"/>
                                <TextBlock Text="{Binding Product.Price, StringFormat='С Т О И М О С Т Ь   З А   Ш Т У К У   {0}₽'}" 
                                           Style="{StaticResource NormalText}"/>
                                <TextBlock Text="{Binding TotalPrice, StringFormat='И Т О Г О В А Я   С Т О И М О С Т Ь   {0}₽'}" 
                                           Style="{StaticResource NormalText}"/>
                                <StackPanel Orientation="Horizontal" Height="45" Margin="0,5,0,0">
                                    <Button Content="+" Height="42" Width="42" Foreground="#071B00" 
                                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                            Background="#F8FEF5" Click="IncreaseQuantity_Click" Tag="{Binding}"/>
                                    <TextBlock Text="{Binding Amount}" VerticalAlignment="Center" 
                                               Style="{StaticResource NormalText}" Margin="10,0,10,0" MinWidth="100" 
                                               TextAlignment="Center"/>
                                    <Button Content="-" Height="42" Width="42" Foreground="#071B00" 
                                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                                            Background="#F8FEF5" Click="DecreaseQuantity_Click" Tag="{Binding}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <TextBlock x:Name="TotalBlock" Text="{Binding TotalPrice, StringFormat='С У М М А:   {0}₽'}" 
                   Margin="74, 600, 0, 0" Style="{StaticResource NormalText}"/>
        <Button Content="З  А  К  А  З  А  Т  Ь" Margin="74,635,676,0" FontSize="20" Width="250" 
                Click="MoveToPayment" Foreground="#071B00"/>
    </Grid>
</Window>