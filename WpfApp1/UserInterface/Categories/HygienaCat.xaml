<Window x:Class="WpfApp1.UserInterface.Categories.HygienaCat" Style="{StaticResource BigWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.UserInterface.Categories"
        mc:Ignorable="d"
        Title="HygienaCat" Height="1080" Width="1440">

    <Window.Resources>
        <DataTemplate x:Key="ProductTemplate">
            <StackPanel Margin="100,0,0,0" Height="287">
                <Border BorderBrush="Black" Width="150" Height="154">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ImagePath}"/>
                    </Border.Background>
                </Border>
                <TextBlock Text="{Binding Name}" FontSize="14" TextAlignment="Center" Style="{StaticResource NormalText}"/>
                <TextBlock Text="{Binding Price, StringFormat='Цена: {0}₽'}" FontSize="12" TextAlignment="Center" Style="{StaticResource NormalText}"/>
                <Button Content="К у п и т ь" Style="{StaticResource BuyButton}" Tag="{Binding}" Margin="0,7,0,2"
                        Click="BuyButton_Click"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>

        <Border HorizontalAlignment="Left" Height="90" Margin="0,-4,0,0" VerticalAlignment="Top" Width="1440" CornerRadius="0" >
            <TextBlock Text="Ш  Е  С  Т  Ё  Р  О  Ч  К  А"  Style="{StaticResource Header1}" Margin="0,16,0,20"/>
        </Border>
        <StackPanel Orientation="Horizontal">
            <Button HorizontalAlignment="Left" Margin="1137,6,0,0" Height="70" Width="70" Click="OpenProfile">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Group 46.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" Margin="22,10,0,0" Height="70" Width="70" Click="OpenCart">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Shopping Cart.png"/>
                </Button.Background>
            </Button>
            <Button HorizontalAlignment="Left" Margin="35,17,0,0" Height="50" Width="50" Click="OpenBurger">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/burger.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="Black" HorizontalAlignment="Left" Height="300" Margin="131,113,0,0" VerticalAlignment="Top" Width="525">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/AD1.png"/>
                </Border.Background>
            </Border>
            <Border BorderBrush="Black" HorizontalAlignment="Left" Height="300" Margin="117,113,0,0" VerticalAlignment="Top" Width="525">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/AD2.png"/>
                </Border.Background>
            </Border>
        </StackPanel>

        <TextBlock Text="С Р Е Д С Т В А   Г И Г И Е Н Ы" Margin="512,428,512,519" Style="{StaticResource Header2}"/>

        <!-- Заменяем статический StackPanel на ItemsControl -->
        <ItemsControl ItemsSource="{Binding Goods}" 
                      ItemTemplate="{StaticResource ProductTemplate}" 
                      Margin="46,467,78,306">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>