<Window x:Class="WpfApp1.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Register" Height="1024" Width="1440">
    <Grid>

        <Border BorderBrush="Black" HorizontalAlignment="Center" Height="90" VerticalAlignment="Top" Width="1440" CornerRadius="0">
            <TextBlock Margin="0,19,0,16" Style="{StaticResource Header1}"><Run Language="ru-ru" Text="Р  е  г  и  с  т  р  а  ц  и  я"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        </Border>



        <StackPanel Margin="84,105,1078,510">
            <TextBlock Margin="0, 0, 0, 46" Style="{StaticResource NormalText}"><Run Text="Введите ваш"/><Run Language="ru-ru" Text="е имя"/></TextBlock>
            <TextBlock Margin="0, 0, 0, 46" Style="{StaticResource NormalText}"><Run Text="Введите ваш"/><Run Language="ru-ru" Text="у фамилию"/></TextBlock>
            <TextBlock Margin="0, 0, 0, 46" Style="{StaticResource NormalText}"><Run Text="Введите ваш"/><Run Language="ru-ru" Text="у почту"/></TextBlock>
            <TextBlock Margin="0, 0, 0, 46" Style="{StaticResource NormalText}"><Run Text="Введите "/><Run Language="ru-ru" Text="пароль"/></TextBlock>
            <TextBlock Margin="0, 0, 0, 46" Style="{StaticResource NormalText}"><Run Text="Введите "/><Run Language="ru-ru" Text="пароль"/></TextBlock>
        </StackPanel>
        <StackPanel Margin="585,105,385,510" Cursor="">
            <TextBox HorizontalAlignment="Left" Margin="0, 0, 0, 23.21" Text="Имя" Width="400" Height="46.79" Style="{StaticResource DarkBox}"/>
            <TextBox HorizontalAlignment="Left" Margin="0, 0, 0, 23.21" Text="Фамилия" Width="400" Height="46.79" Style="{StaticResource DarkBox}"/>
            <TextBox HorizontalAlignment="Left" Margin="0, 0, 0, 23.21" Text="Почта" Width="400" Height="46.79" Style="{StaticResource DarkBox}"/>
            <TextBox HorizontalAlignment="Left" Margin="0, 0, 0, 23.21" Text="Пароль" Width="400" Height="46.79" Style="{StaticResource DarkBox}"/>
            <TextBox HorizontalAlignment="Left" Margin="0, 0, 0, 23.21" Text="Подтверждение пароля" Width="400" Height="46.79" Style="{StaticResource DarkBox}"/>
        </StackPanel>

        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="84,540,0,0" Foreground="#071B00" Click="MoveToLogin"/>
        <Button Content="Нажимая кнопку РЕГИСТРАЦИЯ, я соглашаюсь с пользовательским соглашением" HorizontalAlignment="Left" Margin="84,504,0,0" Width="452" FontSize="16" Foreground="#FF5CAD3E" Background="#F8FEF5" Height="34" Click="MoveToEULA"/>


    </Grid>
</Window>
