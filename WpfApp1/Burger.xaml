        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Burger" Height="600" Width="400">
    <Grid Background="#FF5CAD3E">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <TextBlock Text="К   А   Т   А   Л   О   Г " Margin="25, 26, 0, 0" Width="190" FontSize="32" Style="{StaticResource ResourceKey=Header1}" Height="73"/>
            
