<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">

    <Grid Background="#FFF8FEF5">
        <Border BorderBrush="Black" HorizontalAlignment="Center" Height="600" VerticalAlignment="Center" Width="450" Background="#C4E8B7">
            <TextBlock TextWrapping="Wrap" Text="Вход" Foreground="#071B00"/>
        </Border>

        <TextBox x:Name="loginBox" HorizontalAlignment="Center" Margin="0,340,0,0" TextWrapping="Wrap" Text="почта / логин" VerticalAlignment="Top" Width="350" Height="70" FontFamily="Lucida Sans" />
        <TextBox x:Name="passwordBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="пароль" VerticalAlignment="Center" Width="350"/>

        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,647,0,0" VerticalAlignment="Top" Background="#FF5CAD3E" Cursor="Hand" Click="Button_Click"/>
        <TextBlock TextWrapping="Wrap" Foreground="#071B00" Margin="652,731,652,257" FontSize="16" TextDecorations="Underline"><Run Language="ru-ru" Text="Создать аккаунт"/></TextBlock>
    </Grid>
</Window>
