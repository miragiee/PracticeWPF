<Window x:Class="WpfApp1.ManageGoods" Style="{StaticResource AdminWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ManageGoods">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="0" Style="{StaticResource AdminBorder}">
                <TextBlock Text="Ш  Е  С  Т  Ё  Р  О  Ч  К  А      А  Д  М  И  Н  И  С  Т  Р  И  Р  О  В  А  Н  И  Е" Style="{StaticResource Header1}"/>
            </Border>
            <Button Margin="-100, 20, 0, 0" Width="50" Height="50" Click="GoBack" Style="{StaticResource adminButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Open Door.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <TextBlock Text="У  П  Р  А  В  Л  Е  Н  И  Е     Д  А  Н  Н  Ы  М  И     Т  О  В  А  Р  О  В" Margin="0, -740, 0, 0" FontSize="24" Style="{StaticResource AdminText}"/>
        
        
        
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="33, 186, 0, 0">
                <TextBlock Text="В  Ы  Б  Е  Р  И  Т  Е      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 243, 0" Style="{StaticResource AdminText}"/>
                <Button Content="Т И П О   Д Р О П   М Е Н Ю   С О   С П И С К О М   Т О В А Р О В" Width="450" Height="24" FontSize="14" Style="{StaticResource adminButton}"/>
                <Border Width="24" Height="24" Margin="-875, 0, 0, 0" CornerRadius="0"  Style="{StaticResource AdminBorder}">
                    <Button  Width="24" Height="24" Style="{StaticResource adminButtonDarker}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Galochka.png" Stretch="None" TileMode="None"/>
                        </Button.Background>
                    </Button>
                </Border>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="33, 53, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  О  Е      Н А З В А Н И Е      Т  О  В  А  Р  А" Margin="0, 0, 133, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="Н А З В А Н И Е" Width="450" Height="55" Margin="10, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  У  Ю      С  Т  О  И  М  О  С  Т  Ь     Т  О  В  А  Р  А" Margin="0, 0, 59, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="С Т О И М О С Т Ь" Width="450" Height="55" Margin="43, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  О  Е      К  А  Т  Е  Г  О  Р  И  Ю     Т  О  В  А  Р  А" Margin="0, 0, 59, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="К А Т Е Г О Р И Я" Width="450" Height="55" Margin="50, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <Button Content="C  О  Х  Р  А  Н  И  Т  Ь      И  З  М  Е  Н  Е  Н  И  Я" Width="450" Height="55" Margin="555, 0, 12, 0" Style="{StaticResource adminButtonDarker}"/>
                <Button Content="У Д А Л И Т Ь  Т О В А Р" Width="150" Height="55" FontSize="14" Background="#D51A1A" Style="{StaticResource adminButtonDarker}"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
