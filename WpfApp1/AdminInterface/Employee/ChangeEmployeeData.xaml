<Window x:Class="WpfApp1.ChangeEmployeeData" 
        Style="{StaticResource AdminWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Изменение данных сотрудников">

    <Grid>
        <!-- Заголовок -->
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="0" Style="{StaticResource AdminBorder}">
                <TextBlock Text="Ш  Е  С  Т  Ё  Р  О  Ч  К  А      А  Д  М  И  Н  И  С  Т  Р  И  Р  О  В  А  Н  И  Е" 
                         Style="{StaticResource Header1}"/>
            </Border>
            <Button Margin="-100, 20, 0, 0" Width="50" Height="50" Click="GoBack" 
                    Style="{StaticResource adminButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Open Door.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <TextBlock Text="И  З  М  Е  Н  Е  Н  И  Е     Д  А  Н  Н  Ы  Х     С  О  Т  Р  У  Д  Н  И  К  А" 
                   Margin="0, -740, 0, 0" FontSize="24" Style="{StaticResource AdminText}"/>

        <!-- Основной контент -->
        <StackPanel Margin="0, 100, 0, 0">

            <!-- Выбор сотрудника -->
            <StackPanel Orientation="Horizontal" Margin="33, 40, 0, 0">
                <TextBlock Text="В Ы Б Е Р И Т Е   С О Т Р У Д Н И К А" 
                           Margin="0, 0, 50, 0" Style="{StaticResource AdminText}" VerticalAlignment="Center"/>

                <ComboBox x:Name="EmployeesComboBox" Width="400" Height="40" FontSize="16" 
                          SelectionChanged="EmployeesComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding LastName}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Name}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Patronymic}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Имя -->
            <StackPanel Orientation="Horizontal" Margin="33, 20, 0, 0">
                <TextBlock Text="И М Я" Margin="0, 0, 150, 0" Style="{StaticResource AdminText}" VerticalAlignment="Center"/>
                <TextBox x:Name="FirstNameTextBox" Text="" Width="300" Height="40" Margin="0, 0, 20, 0" 
                         Style="{StaticResource AdminBox}" VerticalContentAlignment="Center"/>
                <Button x:Name="NameChangeButton" Content="Н Е   М Е Н Я Т Ь" Width="150" Height="40" 
                        Click="NameDoNotChange_Click" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <!-- Фамилия -->
            <StackPanel Orientation="Horizontal" Margin="33, 15, 0, 0">
                <TextBlock Text="Ф А М И Л И Я" Margin="0, 0, 95, 0" Style="{StaticResource AdminText}" VerticalAlignment="Center"/>
                <TextBox x:Name="LastNameTextBox" Text="" Width="300" Height="40" Margin="0, 0, 20, 0" 
                         Style="{StaticResource AdminBox}" VerticalContentAlignment="Center"/>
                <Button x:Name="LastNameChangeButton" Content="Н Е   М Е Н Я Т Ь" Width="150" Height="40" 
                        Click="LastNameDoNotChange_Click" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <!-- Отчество -->
            <StackPanel Orientation="Horizontal" Margin="33, 15, 0, 0">
                <TextBlock Text="О Т Ч Е С Т В О" Margin="0, 0, 95, 0" Style="{StaticResource AdminText}" VerticalAlignment="Center"/>
                <TextBox x:Name="PatronymicTextBox" Text="" Width="300" Height="40" Margin="0, 0, 20, 0" 
                         Style="{StaticResource AdminBox}" VerticalContentAlignment="Center"/>
                <Button x:Name="PatronymicChangeButton" Content="Н Е   М Е Н Я Т Ь" Width="150" Height="40" 
                        Click="PatronymicDoNotChange_Click" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <!-- Должность -->
            <StackPanel Orientation="Horizontal" Margin="33, 15, 0, 0">
                <TextBlock Text="Д О Л Ж Н О С Т Ь" Margin="0, 0, 50, 0" Style="{StaticResource AdminText}" VerticalAlignment="Center"/>
                <ComboBox x:Name="PostComboBox" Width="300" Height="40" FontSize="16" Margin="0, 0, 20, 0"/>
                <Button x:Name="PostChangeButton" Content="Н Е   М Е Н Я Т Ь" Width="150" Height="40" 
                        Click="PostDoNotChange_Click" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <!-- Зарплата -->
            <StackPanel Orientation="Horizontal" Margin="33, 15, 0, 0">
                <TextBlock Text="З А Р П Л А Т А" Margin="0, 0, 90, 0" Style="{StaticResource AdminText}" VerticalAlignment="Center"/>
                <TextBox x:Name="SalaryTextBox" Text="" Width="300" Height="40" Margin="0, 0, 20, 0" 
                         Style="{StaticResource AdminBox}" VerticalContentAlignment="Center"/>
                <Button x:Name="SalaryChangeButton" Content="Н Е   М Е Н Я Т Ь" Width="150" Height="40" 
                        Click="SalaryDoNotChange_Click" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" Margin="33, 30, 0, 0">
                <Button Content="С О Х Р А Н И Т Ь   И З М Е Н Е Н И Я" Width="400" Height="50" 
                        Click="SaveChanges_Click" Style="{StaticResource adminButtonDarker}" Margin="0,0,50,0"/>
                <Button Content="У Д А Л И Т Ь   С О Т Р У Д Н И К А" Width="300" Height="50" 
                        Click="DeleteEmployee_Click" Background="#D51A1A" Style="{StaticResource adminButtonDarker}"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>