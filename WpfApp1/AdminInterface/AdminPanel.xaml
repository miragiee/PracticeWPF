<Window x:Class="WpfApp1.AdminPanel" Style="{StaticResource AdminWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AdminPanel">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="0" Style="{StaticResource AdminBorder}">
                <TextBlock Text="Ш  Е  С  Т  Ё  Р  О  Ч  К  А      А  Д  М  И  Н  И  С  Т  Р  И  Р  О  В  А  Н  И  Е" Style="{StaticResource Header1}"/>
            </Border>
            <Button Margin="-100, 20, 0, 0" Width="50" Height="50" Click="GoBack" Style="{StaticResource adminButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Open Door.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        

        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Border Margin="89, 117, 61, 36" Width="270" Height="55" Style="{StaticResource AdminBorder}">
                    <TextBlock Text="С О Т Р У Д Н И К И" Foreground="#F5F8FE" Style="{StaticResource AdminText}"/>
                </Border>

                <Button Content="С П И С О К   С О Т Р У Д Н И К О В" Margin="27, 0, 0, 20" Style="{StaticResource adminButton}" Click="GoToEmployeeList"/>
                <Button Content="Д О Б А В И Т Ь   С О Т Р У Д Н И К А" Margin="27, 0, 0, 20" Style="{StaticResource adminButton}" Click="AddEmployee"/>
                <Button Content="И З М Е Н И Т Ь   Д А Н Н Ы Е   С О Т Р У Д Н И К А" FontSize="16"  Margin="27, 0, 0, 20" Style="{StaticResource adminButton}" Click="ChangeEmployeeData"/>
            </StackPanel>

            <StackPanel Margin="-100, 0, 0, 0">
                <Border Margin="89, 117, 61, 36" Width="270" Height="55" Style="{StaticResource AdminBorder}">
                    <TextBlock Text="К Л И Е Н Т Ы" Foreground="#F5F8FE" Style="{StaticResource AdminText}"/>
                </Border>

                <Button Content="С П И С О К   К Л И Е Н Т О В" Margin="27, 0, 0, 20" Click="GoToClientLost" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <StackPanel Margin="-100, 0, 0, 0">
                <Border Margin="89, 117, 61, 36" Width="270" Height="55" Style="{StaticResource AdminBorder}">
                    <TextBlock Text="З А К А З Ы" Foreground="#F5F8FE" Style="{StaticResource AdminText}"/>
                </Border>

                <Button Content="С П И С О К   З А К А З О В" Margin="27, 0, 0, 20" Click="GoToOrderList" Style="{StaticResource adminButton}"/>
                <Button Content="У П Р А В Л Е Н И Е   З А К А З А М И" Margin="27, 0, 0, 20" Click="GoToManageOrders" Style="{StaticResource adminButton}"/>
            </StackPanel>

            <StackPanel Margin="-100, 0, 0, 0">
                <Border Margin="89, 117, 61, 36" Width="270" Height="55" Style="{StaticResource AdminBorder}">
                    <TextBlock Text="Т О В А Р Ы" Foreground="#F5F8FE" Style="{StaticResource AdminText}"/>
                </Border>

                <Button Content="С П И С О К   Т О В А Р О В" Margin="27, 0, 0, 20" Click="GoToGoodsList" Style="{StaticResource adminButton}"/>
                <Button Content="З А К А З А Т Ь   Т О В А Р Ы" Margin="27, 0, 0, 20" Click="GoToBuyGoods" Style="{StaticResource adminButton}"/>
                <Button Content="У П Р А В Л Е Н И Е   Т О В А Р А М И"  Margin="27, 0, 0, 20" Click="GoToManageGoods" Style="{StaticResource adminButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
