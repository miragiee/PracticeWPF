<Window x:Class="WpfApp1.ChangeEmployeeData" Style="{StaticResource AdminWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ChangeEmployeeData">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="0" Style="{StaticResource AdminBorder}">
                <TextBlock Text="Ш  Е  С  Т  Ё  Р  О  Ч  К  А      А  Д  М  И  Н  И  С  Т  Р  И  Р  О  В  А  Н  И  Е" Style="{StaticResource Header1}"/>
            </Border>
            <Button Margin="-100, 20, 0, 0" Width="50" Height="50" Click="GoBack" Style="{StaticResource adminButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Open Door.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <TextBlock Text="И  З  М  Е  Н  Е  Н  И  Е     Д  А  Н  Н  Ы  Х     С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, -740, 0, 0" FontSize="24" Style="{StaticResource AdminText}"/>
        
        
        
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="33, 186, 0, 0">
                <TextBlock Text="В  Ы  Б  Е  Р  И  Т  Е      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 243, 0" Style="{StaticResource AdminText}"/>
                <Button Content="Т И П О   Д Р О П   М Е Н Ю   С О   С П И С К О М   С О Т Р У Д Н И К О В" Width="450" Height="24" FontSize="14" Style="{StaticResource adminButton}"/>
                <Border Width="24" Height="24" Margin="-875, 0, 0, 0" CornerRadius="0"  Style="{StaticResource AdminBorder}">
                    <Button  Width="24" Height="24" Style="{StaticResource adminButtonDarker}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Galochka.png" Stretch="None" TileMode="None"/>
                        </Button.Background>
                    </Button>
                </Border>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="33, 53, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  О  Е      И  М  Я      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 133, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="И  М  Я" Width="450" Height="55" Margin="0, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  У  Ю      Ф  А  М  И  Л  И  Ю      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 59, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="Ф А М И Л И Я" Width="450" Height="55" Margin="0, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  О  Е      О  Т  Ч  Е  С  Т  В  О      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 59, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="О Ч Т Е СТ В О" Width="450" Height="55" Margin="0, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  У  Ю      Д  О  Л  Ж  Н  О  С  Т  Ь      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 35, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="Д О Л Ж Н О С Т Ь" Width="450" Height="55" Margin="0, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <TextBlock Text="В  В  Е  Д  И  Т  Е      Н  О  В  У  Ю      З  А  Р  П  Л  А  Т  У      С  О  Т  Р  У  Д  Н  И  К  А" Margin="0, 0, 60, 0" Style="{StaticResource AdminText}"/>
                <TextBox Text="З А Р П Л А Т А" Width="450" Height="55" Margin="0, 0, 12, 0" Style="{StaticResource AdminBox}"/>
                <Button Content="Н  Е    М  Е  Н  Я  Т  Ь" Width="150" Height="55" FontSize="14" Style="{StaticResource adminButton}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="33, 32, 0, 0">
                <Button Content="C  О  Х  Р  А  Н  И  Т  Ь      И  З  М  Е  Н  Е  Н  И  Я" Width="450" Height="55" Margin="555, 0, 12, 0" Style="{StaticResource adminButtonDarker}"/>
                <Button Content="У Д А Л И Т Ь  С О Т Р У Д Н И К А" Width="150" Height="55" FontSize="12" Background="#D51A1A" Style="{StaticResource adminButtonDarker}"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
