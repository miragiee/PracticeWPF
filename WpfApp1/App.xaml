<Application x:Class="Practice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Practice"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="BigWindow" TargetType="Window">
            <Setter Property="Height" Value="1024"/>
            <Setter Property="Width" Value="1440"/>
            <Setter Property="Background" Value ="#F8FEF5"/>
        </Style>
        
        <Style TargetType="Border">
            <Setter Property="Background" Value="#5CAD3E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            
        </Style>

        <Style x:Key="Header1" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="./Fonts/Static/#Sofia Sans Condensed Medium"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#F8FEF5"/>
            <Setter Property="Typography.Kerning" Value="True"/>
            <Setter Property="Typography.Capitals" Value="AllPetiteCaps"/>
        </Style>

        <Style x:Key="Header2" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="./Fonts/Static/#Sofia Sans Condensed Medium"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#071B00"/>
            <Setter Property="Typography.Kerning" Value="True"/>
            <Setter Property="Typography.Capitals" Value="AllPetiteCaps"/>
        </Style>

        <Style  x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="./Fonts/Static/#Sofia Sans Condensed Regular"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#071B00"/>
            <Setter Property="Typography.Kerning" Value="True"/>
        </Style>

        <Style x:Key="WhiteBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="./Fonts/#Sofia Sans Condensed Thin" />
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="Background" Value="#F8FEF5"/>
            <Setter Property="Foreground" Value="#071B00"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="70"/>

        </Style>

        <Style x:Key="DarkBox" TargetType="TextBox" >
            <Setter Property="FontFamily" Value="./Fonts/#Sofia Sans Condensed Thin" />
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Cursor" Value="IBeam"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#DEDDDD"/>
            <Setter Property="Foreground" Value="#071B00"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="70"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value ="./Fonts/#Sofia Sans Condensed Regular"/>
            <Setter Property="FontSize" Value="32"></Setter>
            <Setter Property="Background" Value="#C4E8B7"/>
            <Setter Property="Foreground" Value="#F8FEF5"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style x:Key="BuyButton" TargetType="Button">
            <Setter Property="FontFamily" Value ="./Fonts/#Sofia Sans Condensed Regular"/>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Background" Value="#5ED234"/>
            <Setter Property="Foreground" Value="#071B00"/>
            <Setter Property="Width" Value="148"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Top"/>

        </Style>

        <Style x:Key="CatButton" TargetType="Button">
            <Setter Property="FontFamily" Value ="./Fonts/#Sofia Sans Condensed Regular"/>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="Background" Value="#5CAD3E"/>
            <Setter Property="Foreground" Value="#F8FEF5"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Width" Value="212"/>
        </Style>
        
    </Application.Resources>
</Application>
