<Application x:Class="Practice.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Practice"
             StartupUri="MainWindow.xaml">
    <Application.Resources>



        <Style TargetType="Border">
            <Setter Property="Background" Value="#5CAD3E"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Lucida Sans"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#F8FEF5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Lucida Sans"/>
            <Setter Property="FontSize" Value="32"></Setter>
            <Setter Property="Background" Value="#F8FEF5"/>
            <Setter Property="Foreground" Value="#071B00"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="70"/>

        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value ="Lucida Sans"/>
            <Setter Property="FontSize" Value="32"></Setter>
            <Setter Property="Background" Value="#C4E8B7"/>
            <Setter Property="Foreground" Value="#F8FEF5"/>
            <Setter Property="Width" Value="350"/>
            <Setter Property="Height" Value="70"/>
        </Style>

        <Style TargetType="Rectangle">
            <Setter Property="Fill" Value="#5CAD3E"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Width" Value="1440"/>
        </Style>
        
    </Application.Resources>
</Application>
