<Window x:Class="WpfApp1.BakerInterface" Style="{StaticResource BakerWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BakerInterface">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Border CornerRadius="0" Style="{StaticResource BakerBorder}">
                <TextBlock Text="Ш  Е  С  Т  Ё  Р  О  Ч  К  А      А  Д  М  И  Н  И  С  Т  Р  И  Р  О  В  А  Н  И  Е" Style="{StaticResource Header1}"/>
            </Border>
            <Button Margin="-100, 20, 0, 0" Width="50" Height="50" Click="GoBack" Style="{StaticResource bakerButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Open Door.png"/>
                </Button.Background>
            </Button>
        </StackPanel>
        <TextBlock Text="С  П  И  С  О  К     З  А  К  А  З  О  В" Margin="0, -740, 0, 0" FontSize="24" Style="{StaticResource BakerText}"/>

        <DataGrid Name="EmployeeListDataGrid" Margin="0, -400, 0, 0" ItemsSource="{Binding Bakery}" Style="{StaticResource bakerTable}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Наличие доставки" Binding="{Binding Delivery}" />
                <DataGridTextColumn Header="Заказанная выпечка" Width="400" Binding="{Binding OrderedGoodsID}" />
                <DataGridTextColumn Header="Время приготовления" Binding="{Binding CookingTime}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Margin="120, 0, 0, 0">
            <TextBlock Text="В  Ы  Б  О  Р       З  А  К  А  З  А" Margin="0, -60, 243, 0" Style="{StaticResource BakerText}"/>
            <Button Content="Т И П О   Д Р О П   М Е Н Ю   С О   С П И С К О М   З  А  К  А  З  О  В" Foreground="#1B1500" Background="#EDEAC8" Margin="-200, 462, 0, 0" Width="450" Height="24" FontSize="14" Style="{StaticResource bakerButton}"/>
            <Border Width="24" Height="24" Margin="-900, 462, 0, 0" CornerRadius="0"  Style="{StaticResource BakerBorder}">
                <Button   Width="24" Height="24" Style="{StaticResource bakerButton}">
                    <Button.Background>
                        <ImageBrush ImageSource="/Galochka.png" Stretch="None" TileMode="None"/>
                    </Button.Background>
                </Button>
            </Border>

            <Button Content="С  Д  А  Т  Ь     З  А  К  А  З" Margin="-1065, 530, 0, 0"  Style="{StaticResource bakerButton}"/>

        </StackPanel>
    </Grid>
</Window>
